<form action="<%=cat_rental_requests_url%>" method="post">
  <select name="request[cat_id]">

    <option selected disabled> pick a cat </option>

    <% @kats.each do |cat| %>
      <option value="<%= cat.id %>"
        <%= "selected" if @request.cat_id == cat.id %> >
        <%= cat.name %>
      </option>
    <% end %>
  </select>
  <br>

  Start Date
  <br>
  <input type ="date" name = "request[start_date]"
    value="<%#= request.start_date %>">
  <br>
  End Date
  <br>
  <input type ="date" name = "request[end_date]"
    value="<%#= request.end_date %>">
  <br>
  <br>

  <input type="submit">
</form>
